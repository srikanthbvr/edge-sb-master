<div class="grid-item">
    <div class="post-box">
        <figure class="{{post_class}}">
            <a class="post-link" href="{{url}}">
                <img class="post-image lazyload" data-srcset="{{> srcset}}" style="padding: 5px;"
                    data-sizes="auto" src="{{img_url feature_image size="s"}}"
                    alt="{{title}}">
            </a>
            <a class="post-lightbox" href="{{img_url feature_image}}">
                <i class="icon icon-arrow-expand"></i>
            </a>
            <figcaption class="post-caption">
                <h2 class="post-caption-title">{{title}}</h2>
                <div class="post-caption-meta">
                    {{#primary_tag}}
                        <span class="post-caption-meta-item post-caption-meta-tag">
                            <a href="{{url}}">{{name}}</a>
                        </span>
                    {{/primary_tag}}
                    <span class="post-caption-meta-item post-caption-meta-date">
                        <time
                            datetime="{{date format="YYYY-MM-DD"}}">{{date published_at}}</time>
                    </span>
                    <span class="post-caption-meta-item post-caption-meta-link">
                        <a href="{{url}}">View project</a>
                    </span>
                </div>
            </figcaption>
        </figure>
        {{#if custom_excerpt}}
            <div class="post-excerpt container medium" style="padding-bottom: 10px;">{{custom_excerpt}}</div>
        {{/if}}
    </div>
</div>